    </tr>

    @foreach (var item in Model)
    {
        //if (item.Statut != 0 || ViewBag.AffichFiche !=null)
        //{
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nomFourn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descriptionFourn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telephoneFourn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.paysFourn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.villeFourn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.adresseFourn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.codePostal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.emailFourn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Statut)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdFourn }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdFourn })
                    @if (item.Statut == 1)
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdFourn })
                    }
                    else
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdFourn })
                    }


                </td>

    </tr>


    }

</table>
