@model IEnumerable<applicationTirelire.Models.Fournisseur>

@{
    ViewBag.Title = "Index";
}



<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("Voir tous les fournisseurs","Afficher",new { @class="Button"})
    @Html.ActionLink("Fournisseurs validés","Index",new { @class="Button"})


</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nomFourn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descriptionFourn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telephoneFourn)
