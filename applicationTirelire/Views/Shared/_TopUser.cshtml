@model applicationTirelire.Models.ToListCliVm


<h2 class="text-center top">Liste des 5 meilleurs clients</h2>
<table class="table">
    <tr>
        <th class="text-center">
            Nom
        </th>
        <th class="text-center">
            Adresse
        </th>
        <th class="text-center">
            Mail
        </th>
        <th class="text-center">
            Total commande
        </th>
    </tr>

    @for (int i = 0; i < Model.ListIds.Count; i++)
    {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => modelItem.ListIds[i].NomCli)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => modelItem.ListIds[i].Adresse)
            </td>
             <td class="text-center">
                @Html.DisplayFor(modelItem => modelItem.ListIds[i].Mail)
            </td>   
            <td class="text-center">
                @Html.DisplayFor(modelItem => modelItem.ListIds[i].TotCommande)<span> €</span>
            </td>

        </tr>
    }

</table>
