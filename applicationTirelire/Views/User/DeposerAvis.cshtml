@model applicationTirelire.Models.Avi
<style>
    .prod {
        font-weight: bold
    }
</style>
<body>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Deposer un avis</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Hidden("idProd")
            @Html.Hidden("idUser")
            <div class="bold">
                Tirelire @Model.Produit.nomProd
            </div>
            <br />
            <div>
                <image src="@Url.Content("~/Images/" + Model.IdProd + "_" + Model.Produit.UrlImage)" width="300" />
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.note, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="col-md-3">
                        <p class="row custom-checkbox">
                            <span class="col-md-1"></span>
                            <span class="col-md-1">@Html.RadioButtonFor(model => model.note, "1")</span>
                            <span class="col-md-1">@Html.RadioButtonFor(model => model.note, "2")</span>
                            <span class="col-md-1">@Html.RadioButtonFor(model => model.note, "3")</span>
                            <span class="col-md-1">@Html.RadioButtonFor(model => model.note, "4")</span>
                            <span class="col-md-1">@Html.RadioButtonFor(model => model.note, "5")</span>
                            <span class="col-md-1"></span>
                        </p>
                        <p class="row">
                            <span class="col-md-1">&#128544</span>
                            <span class="col-md-1">1</span>
                            <span class="col-md-1">2</span>
                            <span class="col-md-1">3</span>
                            <span class="col-md-1">4</span>
                            <span class="col-md-1">5</span>
                            <span class="col-md-1">&#128522</span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.texte, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.texte, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.texte, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Publier l'avis" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Mes Commandes", "ListerCommandes")
    </div>
</body>